{
	"dataSource": {
		"filePath": "../../datasets/ripley/ripleyGarcke.train.arff",
		"hasTargets" : true,
		"batchSize" : 10,
		"validationPortion" : 0.2,
		"epochs" : 2,
		"randomSeed" : -1,
		"readinCutoff": -1,
		"readinClasses": [-1, 1],
		"readinColumns": [0, 1]
	},
	"scorer": {
		"metric": "Accuracy"
	},
	"fitter": {
		"type": "classification",
		"gridConfig": {
			"gridType": "linear",
			"level": 5
		},
		"coarseningConfig" :{
                "numCoarsening": 2,
                "threshold": 0.01,
                "maxLevelType": false,
                "noPoints": 1,
                "coarseningIndicator" : "GridPointBased"
		},
		"regularizationConfig": {
			"lambda": 1e-2
		},
		"densityEstimationConfig" : {
			"densityEstimationType" : "decomposition",
			"matrixDecompositionType": "OrthoAdapt"
		},
		"learner" : {
			"usePrior" : true,
			"beta" : 1.0
		}
	}
}


